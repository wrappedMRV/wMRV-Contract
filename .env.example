# .env.example
# Rename this file to .env and fill in the values as per your project's requirements

# Private key of the deployer's wallet. DO NOT SHARE the real private key publicly.
DEPLOYER_PRIVATE_KEY="your_wallet_private_key_here"

# Infura or Alchemy API key, if you're using these services for Ethereum node access
INFURA_API_KEY="your_infura_api_key_here"
ALCHEMY_API_KEY="your_alchemy_api_key_here"

# Etherscan API key for contract verification
ETHERSCAN_API_KEY="your_etherscan_api_key_here"

# PolygonScan (or equivalent) API key for Mumbai testnet contract verification
POLYGONSCAN_API_KEY="your_polygonscan_api_key_here"


# RPC URLs for Ethereum networks (Mainnet, Ropsten, Rinkeby, Goerli, Kovan)
MAINNET_RPC_URL="https://mainnet.infura.io/v3/${INFURA_API_KEY}"
ROPSTEN_RPC_URL="https://ropsten.infura.io/v3/${INFURA_API_KEY}"
RINKEBY_RPC_URL="https://rinkeby.infura.io/v3/${INFURA_API_KEY}"
GOERLI_RPC_URL="https://goerli.infura.io/v3/${INFURA_API_KEY}"
KOVAN_RPC_URL="https://kovan.infura.io/v3/${INFURA_API_KEY}"

# RPC URL for Polygon's Mumbai testnet
MUMBAI_RPC_URL="https://mumbai.infura.io/v3/${INFURA_API_KEY}"

# Other optional configurations
# REPORT_GAS - Set to "true" to enable gas usage reporting
REPORT_GAS="true"
